<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".auth.presentation.register.Register">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="368dp"
        android:layout_height="128dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"
        android:layout_marginBottom="50sp"
        app:srcCompat="@drawable/logo" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="28.41dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:orientation="vertical"
            android:padding="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:text="Register"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/googlebutton"
                android:layout_width="320sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#FFFFFF"
                android:drawableLeft="@drawable/googleicon"
                android:text="Continue with Google"
                android:textColor="#000000"
                android:textSize="16sp"
                app:strokeColor="#B7B7B7"
                app:strokeWidth="1dp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/facebookbutton"
                android:layout_width="320sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#FFFFFF"
                android:drawableLeft="@drawable/fb_icon"
                android:drawablePadding="8dp"
                android:text="Continue with Facebook"
                android:textColor="#000000"
                android:textSize="16sp"
                app:strokeColor="#B7B7B7"
                app:strokeWidth="1dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:text="------------ Or continue with Email ------------"
                android:textSize="13.99sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/name"
                android:layout_width="320sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/input_bg"
                android:hint="Name"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:paddingTop="14dp"
                android:paddingRight="10dp"
                android:paddingBottom="14dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/username"
                android:layout_width="320sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/input_bg"
                android:hint="Username"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:paddingTop="14dp"
                android:paddingRight="10dp"
                android:paddingBottom="14dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="320sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/input_bg"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:paddingTop="14dp"
                android:paddingRight="10dp"
                android:paddingBottom="14dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/password"
                android:layout_width="320sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:autofillHints="password"
                android:background="@drawable/input_bg"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:paddingTop="14dp"
                android:paddingRight="10dp"
                android:paddingBottom="14dp"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/terms"
                android:layout_width="280sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:text="I agree with the Terms and Conditions"
                android:textAlignment="textStart"
                tools:ignore="RtlCompat" />

            <Button
                android:id="@+id/registerbutton"
                android:layout_width="320sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#369C5E"
                android:text="Create Account"
                android:textColor="#ffffff"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Already have an account?"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/loginText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:text="Log in"
                    android:textColor="#59CD90"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>